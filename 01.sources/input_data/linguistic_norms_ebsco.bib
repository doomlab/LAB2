ISSN = {0388-0001},
Journal = {Language Sciences},
Keywords = {Values realizing, Ecological psychology, Dialogicality, Languaging, Skilled linguistic action, Video games, Computer Games, Foreign Language Learning, Linguistics, Role Playing Games, Ecological Psychology, Wayfinding},
Pages = {22 - 41},
Title = {An eco-dialogical study of second language learners' World of Warcraft (WoW) gameplay},
URL = {kristi.newgarden@uconn.edu, zhengd@hawaii.edu, minliu@hawaii.edu},
Volume = {48},
