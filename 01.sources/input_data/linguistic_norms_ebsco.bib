Journal = {The Spanish Journal of Psychology},
Keywords = {agentive syntax, cross-linguistic differences, fairness, organizational justice, perception, Spanish, English, Justice, Language, Linguistics, Syntax},
Title = {The language of fairness: How cross-linguistic norms in Spanish and English influence reactions to unfair treatment},
URL = {ekausel@uc.cl},
Volume = {19},
Year = {2016},
}


